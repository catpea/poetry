<!doctype html>
<html lang="en">
  <head>
    {{>head}}
  </head>
  <body>

    <nav>
      <li>
        <h2><a href="/index.html#{{meta.sectionName}}">Chapter &sect;{{meta.sectionNumber}} Table of Contents</a></h2>
        <ul>
          {{#each data}}
          <li>
            <hgroup>
              <h3><a href="{{../meta.currentFileName}}#{{meta.id}}">{{meta.title}}</a></h3>
              <small>Written {{meta.timestamp}}</small>
            </hgroup>
          </li>
          {{/each}}
        </ul>
      </li>
    </nav>

    <main>
      <!-- title and poem -->
      {{#each data}}
        <article class="log-entry" itemscope itemtype="http://schema.org/CreativeWork">
          <a name="{{meta.id}}"></a>
          <meta itemprop="dateCreated" datetime="{{meta.date}}">
          <header>
            <hgroup>
              <h1><a href="/{{meta.id}}.html">{{meta.title}}</a></h1>
              <small>{{meta.timestamp}}</small>
            </hgroup>
          </header>
          <div style="text-align: right;">
            <a href="/print-{{meta.id}}.html">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z"/>
              <path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z"/>
              <path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
            </svg>
            <a/>
          </div>
          {{{data.html}}}
        </article>
      {{/each}}
    </main>
    <!-- sub navigation -->
    <nav>
      {{#unless meta.isNewest}}
        <a href="{{meta.olderFileName}}" role="button">&laquo;&nbsp; Older</a>
      {{/unless}}
      <a href="/index.html#{{meta.sectionName}}" role="button" class="secondary">Index &nbsp;&equiv;</a>
      {{#unless meta.isOldest}}
        <a href="{{meta.newerFileName}}" role="button" class="secondary">Newer &nbsp;&raquo;</a>
      {{/unless}}
    </nav>
    {{> footer}}
  </body>
</html>
