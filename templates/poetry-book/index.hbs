<!doctype html>
<html lang="en" data-theme="dark">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">
    <title>Cat Pea News Network</title>
    <meta name="description" content="Cat Pea News Network">
    <link rel="canonical" href="{{canonical}}">
    <meta name="robots" content="index, follow">
    <link rel="stylesheet" href="css/pico.classless.min.css">
    <link rel="stylesheet" href="css/custom.css"/>
    <script src="js/theme.js"></script>
  </head>

  <body>


    <header>
      <hgroup>
        <h1>Cat Pea</h1>
        <p>Medicinal Poetry by Dr. Meow</p>
      </hgroup>
    </header>

    <main>
      <ul>
        {{#each section}}

        <li>
          <a name="{{meta.sectionName}}" href="{{meta.currentFileName}}">Chapter &sect;{{meta.sectionNumber}}</a>
          <hr>

          <ul>
            {{#each data}}
            <li>
              <a href="{{../meta.currentFileName}}#{{meta.id}}">{{meta.title}}</a><br><small>Written {{meta.timestamp}}</small>
            </li>
            {{/each}}
          </ul>
        </li>

        {{/each}}
      </ul>
    </main>

    <footer>
      <p>
        <small>
          <a href="{{canonical}}" class="secondary">Cat Pea</a> &middot;
          <a href="https://news.catpea.com/" class="secondary">News</a> &middot;
          <a href="https://github.com/catpea/poetry" class="secondary">Source Code</a> &middot;
          <a href="https://catpea.github.io/poetry/" class="secondary">Mirror</a>
        </small>
      </p>
    </footer>

  </body>

</html>
