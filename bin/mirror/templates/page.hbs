<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="generator" content="">
  <title>{{title}}</title>
  <link rel="canonical" href="https://catpea.github.io/poetry/">
  <style>
    div.section {
      margin-bottom: 3rem;
    }
  </style>
</head>

<body>
  <main>

    <article>

      <hgroup>
        <h1>
          {{title}}
        </h1>
        <h4>
          <small>{{date}}</small>
        </h4>
      </hgroup>

      {{#if image}}
        <div class="section">
          <img src="image/md-{{image}}">
        </div>
      {{/if}}

      {{#if audio}}
        <div class="section">
          <p><a href="audio/{{audio}}">Audio Version</a></p>
        </div>
      {{/if}}

      {{{data.html}}}

    </article>

  </main>
</body>

</html>
